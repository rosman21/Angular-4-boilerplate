{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "types": [ "node" ],
    "typeRoots": [ "../node_modules/@types" ],
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
